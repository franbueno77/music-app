<%- include("template/header") -%>
<body>
    <h1>Create a new location</h1>    

    <form action="/edit/<%=location._id %>" method="POST" >
        <div class="mb-3">
          <input type="text" name="country" class="form-control" value="<%= location.country %>" id="country" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
          <input type="text" name="city" value="<%= location.city %>" class="form-control" >
        </div>
        <div class="mb-3">
            <input type="number"  name="coorx" step="any" value="<%= location.coorx %>" class="form-control" >
          </div>
          <div class="mb-3">
            <input type="number"  name="coory" step="any" value="<%= location.coory %>" class="form-control" >
          </div>
        <button type="submit" class="btn btn-success">Edit</button>
        <a href="../" type="submit" class="btn btn-danger">Back</a>
      </form>
</body>
</html>